# Environment Configuration
# Copy this file to .env and configure your API keys

# Required: Wassenger API key
API_KEY=ENTER_API_KEY_HERE

# Required: OpenAI API key
# Get it from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=

# OpenAI model to use
OPENAI_MODEL=gpt-4o

# Required for local development: Ngrok auth token
# Get it from: https://ngrok.com/signup
NGROK_TOKEN=

# Optional: Specific WhatsApp device ID
DEVICE=

# Optional: Webhook URL for production if the program is cloud hosted
WEBHOOK_URL=

# Server port
PORT=8080

# Optional: Set to true for production deployment
PRODUCTION=false

# Optional: Set to true for development mode with auto-initialization
DEV=true

# Log level (Trace, Debug, Information, Warning, Error, Critical)
LOG_LEVEL=Information
